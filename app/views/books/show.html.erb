<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--部分テンプレート-->
      <%= render'book',book:@book_new,user:@book.user %>
      <!--部分テンプレートで表示させるものは、インスタンス変数を変更して行う。中は弄らない-->
      <!--部分テンプレート終了-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user_id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100)  %>
                  <nav>
                    <%= @book.user.name %>
                  </nav>
                  <% end %>
                </tb>
                <td><%= link_to @book.title,book_path %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に消しますか？?" %>
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>